<?xml version="1.0"?> 
<config>
    <tabs>
        <wagento translate="label" module="testorders">
            <label>Wagento</label>
            <sort_order>50</sort_order>
        </wagento>
    </tabs>
    <sections>
        <testorders translate="label" module="testorders">
            <label>Test Orders Config</label>
            <sort_order>10</sort_order>
            <tab>wagento</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="testorders">
                    <label>General</label>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <customerid translate="label" module="testorders">
                            <label>Test Customer Id</label>
                            <comment>Customer Id that will be used for orders generated by this module</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customerid>
                        <skulist translate="label" module="testorders">
                            <label>SKU(s) List</label>
                            <comment>List of SKU(s) that will be used as input for test orders. Separate SKUs by comma (,)</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </skulist>
                        <shipping_method translate="label" module="testorders">
                            <label>Shipping Method</label>
                            <comment>Specify Supported Shipping Method for Test Orders</comment>
                            <source_model>testorders/system_config_source_shippingmethods</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shipping_method>
                        <payment_method translate="label" module="testorders">
                            <label>Payment Method</label>
                            <comment>Specify Supported Payment Method for Test Orders</comment>
                            <source_model>testorders/system_config_source_paymentmethods</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </payment_method>
                        <order_number translate="label" module="testorders">
                            <label>Number of Test Orders</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_number>
                    </fields>
                </general>
            </groups>
        </testorders>
    </sections>
</config>
